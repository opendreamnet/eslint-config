{
  "name": "@opendreamnet/eslint-config",
  "description": "ESLint config for OpenDreamnet projects.",
  "version": "0.3.2",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "release": "release-it",
    "deploy": "git push --follow-tags origin main",
    "upgrade": "pnpm dlx npm-check-updates -i",
    "build": "tsc",
    "watch": "tsc -w",
    "inspect": "pnpm dlx @eslint/config-inspector@latest",
    "test": "eslint tests --config eslint.config.js"
  },
  "author": {
    "name": "Ivan Bravo Bravo",
    "email": "ivan@opendreamnet.com"
  },
  "files": [
    "dist"
  ],
  "packageManager": "^pnpm@9.14.4",
  "dependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/eslint__js": "^8.42.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-promise": "^7.1.0",
    "typescript-eslint": "^8.9.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^9.0.0",
    "@tsconfig/node-lts": "^20.1.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint": "9.6.1",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "release-it": "^17.9.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "eslint": "^9",
    "typescript": "^5"
  }
}
